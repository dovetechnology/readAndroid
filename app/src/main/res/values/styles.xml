<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="default_btn">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>


    <style name="SpalashActivityTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/qidongtu</item>
        <!--<item name="android:windowAnimationStyle">@style/AnimationActivity</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="WY.Theme.TextAppearance.Read.BottomMenu.Button"
        parent="BottomMenu">
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="BottomMenu">
        <item name="android:textColor">@color/color_cb</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Read.BottomMenu.IconButton">
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Read.BottomMenu.Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10.0dp</item>
        <item name="android:paddingRight">10.0dp</item>
        <item name="android:paddingTop">18.0dp</item>
        <item name="android:paddingBottom">16.0dp</item>
    </style>

    <style name="Read.BottomMenu">
        <item name="android:textColor">@color/read_menu_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/read_bg_bottom_menu</item>
    </style>

    <style name="Read" />


    <style name="Read.Setting" />

    <style name="Read.Setting.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ff462e0b</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ReadSpeakSetting">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ff462e0b</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Read.Setting.ThemeView">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="super_cornerRadius">10dp</item>
        <item name="super_strokeWidth">1dp</item>
        <item name="super_strokeColor_selected">@color/colorAccent</item>

    </style>

    <style name="Read.Setting.Dialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
